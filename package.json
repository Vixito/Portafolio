{
  "name": "vixis-portfolio",
  "author": "Vixis",
  "version": "0.1.0",
  "description": "Monorepo for Vixis Portfolio application",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev:all": "concurrently \"npm run dev:frontend\" \"npm run dev:admin\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:admin": "cd admin && npm run dev",
    "build:all": "npm run build:frontend && npm run build:admin",
    "build:frontend": "cd frontend && npm run build",
    "build:admin": "cd admin && npm run build",
    "lint:all": "concurrently \"npm run lint:frontend\" \"npm run lint:admin\"",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:admin": "cd admin && npm run lint"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
