{
  "name": "vixis-portfolio",
  "author": "Vixis",
  "version": "0.1.0",
  "description": "Monorepo for Vixis Portfolio application",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "frontend",
    "admin",
    "shared"
  ],
  "scripts": {
    "dev:all": "concurrently \"npm run dev:frontend\" \"npm run dev:admin\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:admin": "npm run dev --workspace=admin",
    "build:all": "npm run build:frontend && npm run build:admin",
    "build:frontend": "npm run build --workspace=frontend",
    "build:admin": "npm run build --workspace=admin",
    "lint:all": "concurrently \"npm run lint:frontend\" \"npm run lint:admin\"",
    "lint:frontend": "npm run lint --workspace=frontend",
    "lint:admin": "npm run lint --workspace=admin"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.9.2",
    "tailwindcss": "^4.1.13",
    "@types/node": "^20"
  }
}
